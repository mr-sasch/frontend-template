// Шапка
.header
	background-color greyHeader
	padding 5px 0

// Обертка
.header-wrap
	display flex
	color greyTxtHeader
	justify-content space-between
	align-items center
	flex-wrap wrap

// Контакты
.header__cont
	color greenTxt
.header__cont-phone,
.header__cont-mail
	background-repeat no-repeat
	padding-left 20px
	background-position left center
.header__cont-mail
	background-image url('../../images/header-mail.png')
	margin-top 2px
.header__cont-phone
	background-image url('../../images/header-phone.png')

// Поиск
.header__search
	position relative
	width 41px
	height 34px
.header__search-block
	position absolute
	height 100%
	width 100%
	top 0
	right 0
	padding-right 36px
	padding-left 5px
	background-image url('../../images/header-search.png')
	background-repeat no-repeat
	background-position calc(100% - 5px) center
	background-color rgba(#ffffff, 0)
	border  1px solid #b7b7b7
	background-color greyHeader
	transition width .2s ease
	color greyTxtHeader
.header__search-block:focus
	width 200px

// Навигация
.header__nav
	display flex
	justify-content space-between
.header__nav-item
	padding 0 10px
	position relative
	color inherit
	text-decoration none
	transition .2s ease
.header__nav-item:hover
	color greenTxt
	text-decoration underline

.header__nav-item:after
	content ''
	position absolute
	height 120%
	right 0
	top 50%
	transform translateY(-50%)
	border-right 1px solid #fff
.header__nav-item:last-child:after
	display none
.fa-chevron-down__header
	font-size 10px
